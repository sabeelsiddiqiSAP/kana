<div class="box">

  <div class="center-text">
    <h1>Restaurant</h1>
  </div>

  </br>

    <div class="center-text">

          <div>
            <%= link_to 'List New Meal', new_create_meal_path, :class => "btn btn-primary" %>
          </div>

            <hr>

          <div>
            <h3>Current Meals</h3>
          </div>

          <table>
              <tbody>

                  <% @create_meals.each do |create_meal| %>
                        <tr>
                          <div class="col-md-6 col-md-offset-3">
                          <div class="thumbnail">

                          <%= image_tag create_meal.avatar.url(:thumb) %>
                          <p><%= create_meal.name %></p>
                          <p><%= create_meal.description %></p>

                          <%= link_to 'Show', create_meal, :class => "btn btn-primary" %>
                          <%= link_to 'Edit', edit_create_meal_path(create_meal), :class => "btn btn-success" %>
                          <%= link_to 'Destroy', create_meal, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %>
                        </div>
                      </tr>
                  <% end %>
              </tbody>

          </table>

        </div>
    </div>
</div>
