<p id="notice"><%= notice %></p>

  <div class="box">
      <h1>Current Listed Ingredients</h1>
        <hr>
      <div>
        <%= link_to 'Create New Ingredient Package', new_ingredient_path, :class => "btn btn-primary" %>
      </div>
        <hr>
  <div>
      <% @ingredients.each do |ingredient| %>
          <div class="thumbnail">
            <%= image_tag ingredient.avatar.url(:medium) %>
            <div class="caption">
              <h3><%= ingredient.name %></h3>
              <p><%= ingredient.description %></p>
              <p>
                <%= link_to 'Preview', ingredient %>
              </br></br>
                <%= link_to 'Edit', edit_ingredient_path(ingredient) %> |
                <%= link_to 'Delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
            </div>
          </div>
      <% end %>
      <br>
  </div>

  <%= link_to "Back", restaurant_path, :class => "btn btn-success"%>

</div>
